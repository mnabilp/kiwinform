<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="30dp"
    android:layout_marginVertical="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/activities_plan_title"
            style="@style/TextViewTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_activities"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/activities_plan"
            app:layout_constraintEnd_toStartOf="@+id/activities_plan_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activities_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activities_plan_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/title_my_plan"
            android:textColor="@color/white"
            style="@style/TextViewSubtitleStyle"/>

        <TextView
            android:id="@+id/activities_plan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/activities_plan_title"
            android:text="@string/date_example"
            android:textColor="@color/white"
            style="@style/TextViewTitleStyle"/>

        <TextView
            android:id="@+id/activities_plan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/activities_plan"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/time_example"
            android:textColor="@color/white"
            style="@style/TextViewTitleStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>