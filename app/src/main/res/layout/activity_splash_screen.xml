<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBrightBlue"
    tools:context=".ui.view.splash.SplashActivity">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_splash_logo"
        app:layout_constraintBottom_toTopOf="@id/mountains_forests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appTitle"
        style="@style/TextViewLoginTitleStyle"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/mountains_forests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appIcon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mountains_forests"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_splash_screen_clip_art"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>